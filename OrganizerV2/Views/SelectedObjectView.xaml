<UserControl x:Class="OrganizerV2.Views.SelectedObjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:OrganizerV2.Views" 
             xmlns:viewmodels="clr-namespace:OrganizerV2.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" 
             d:DesignWidth="250">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <UserControl.DataContext>
        <viewmodels:SelectedObjectViewModel/>
    </UserControl.DataContext>

    <Expander 
            Header="Selected Object Properties" 
            BorderBrush="Gray"
            Margin="2"
            Padding="2"
            MaxHeight="600"
            IsExpanded="True">

        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
            <StackPanel>
                <Border Visibility="{Binding IsViewVisibleBeamProperties, Converter={StaticResource BooleanToVisibilityConverter}}">
                    
                <views:SelectedBeamView/>
                </Border>
            </StackPanel>
        </ScrollViewer>

    </Expander>
    
</UserControl>
